#include <stdio.h>

int main() {
    FILE* fp;
    int a[] = {0, 1, 2};
    char b[] = "ABC";
    float c[] = {1.1, 1.2, 1.3};

    int ra[3];
    char rb[4];  // 包含 '\0'
    float rc[3];

    // 寫入檔案
    fp = fopen("a.bin", "wb");
    if (fp == NULL) {
        printf("檔案開啟失敗\n");
        return 1;
    }

    fwrite(a, sizeof(int), 3, fp);
    fwrite(b, sizeof(char), 4, fp);  // 包含 '\0'
    fwrite(c, sizeof(float), 3, fp);
    fclose(fp);

    // 讀取檔案
    fp = fopen("a.bin", "rb");
    if (fp == NULL) {
        printf("檔案開啟失敗\n");
        return 1;
    }

    fread(ra, sizeof(int), 3, fp);
    fread(rb, sizeof(char), 4, fp);
    fread(rc, sizeof(float), 3, fp);
    fclose(fp);

    // 輸出結果
    printf("int 陣列: ");
    for (int i = 0; i < 3; i++) {
        printf("%d ", ra[i]);
    }
    printf("\n");

    printf("char 陣列: %s\n", rb);

    printf("float 陣列: ");
    for (int i = 0; i < 3; i++) {
        printf("%.1f ", rc[i]);
    }
    printf("\n");

    return 0;
}
